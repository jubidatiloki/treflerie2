<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/degrade_principal">


    <TextView
        android:id="@+id/derniere_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Aucune transacion effectuÃ©e"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp" />



    <TextView
        android:id="@+id/derniere_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text=""
        android:textSize="30dp"/>


    <TextView
        android:id="@+id/derniere_dest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/derniere_date"
        android:gravity="center|top"
        android:textColor="@color/black"
        android:layout_marginTop="70dp"
        android:text=""
        android:textSize="30dp"/>


    <TextView
        android:id="@+id/derniere_montant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/derniere_dest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:textColor="@color/black"
        android:text=""
        android:textSize="30dp"/>

    <Button
        android:id="@+id/derniere_actualiser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="actualiser"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:drawableBottom="@drawable/ic_update"
        android:layout_marginBottom="50dp" />

    <ImageView
        android:id="@+id/derniere_infobulle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="30dp"
        android:minHeight="30dp"
        android:src="@drawable/ic_icon_infobulle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="13dp" />

</RelativeLayout>